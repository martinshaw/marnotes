{
    "private": true,
    "type": "module",
    "scripts": {
        "build:css": "sass public/scss/app.scss public/dist/app.css --style=compressed --no-source-map",
        "build:js": "esbuild public/typescript/app.tsx --bundle --minify --format=iife --outfile=public/dist/app.js --jsx-factory=React.createElement --jsx-fragment=React.Fragment",
        "build": "npm run build:css && npm run build:js",
        "build:dev": "sass public/scss/app.scss public/dist/app.css --no-source-map && esbuild public/typescript/app.tsx --bundle --sourcemap --format=iife --outfile=public/dist/app.js --jsx-factory=React.createElement --jsx-fragment=React.Fragment"
    },
    "devDependencies": {
        "esbuild": "^0.27.2",
        "sass": "^1.70.0",
        "typescript": "^5.3.3"
    }
}